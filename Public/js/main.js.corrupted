  // ========== SALE ITEM MANAGEMENT ==========
  addSaleItem() {
    console.log('ðŸ“¦ Adding sale item...');

    const productSelect = document.getElementById('saleProduct');
    const qtyInput = document.getElementById('saleQty');
    const unitPriceInput = document.getElementById('saleUnitPrice');
    const sellPriceInput = document.getElementById('saleSellPrice');

    if (!productSelect || !qtyInput || !sellPriceInput || !unitPriceInput) {
      console.error('âŒ Form elements not found');
      return;
    }

    const productId = productSelect.value;
    const qty = parseInt(qtyInput.value);
    const sellPrice = parseFloat(sellPriceInput.value);
    const unitPrice = parseFloat(unitPriceInput.value);

    console.log('ðŸ“ Form values:', { productId, qty, sellPrice, unitPrice });

    // Validation
    if (!productId) {
      this.showConfirm('Error', 'âŒ Please select a product');
      return;
    }

    if (!qty || qty < 1 || isNaN(qty)) {
      this.showConfirm('Error', 'âŒ Please enter a valid quantity (minimum 1)');
      return;
    }

    if (sellPrice === undefined || sellPrice < 0 || isNaN(sellPrice)) {
      this.showConfirm('Error', 'âŒ Please enter a valid selling price');
      return;
    }

    const product = this.products.find(p => p.id === productId);
    if (!product) {
      console.error('âŒ Product not found:', productId);
      this.showConfirm('Error', 'âŒ Product not found');
      return;
    }

    console.log('âœ… Product found:', product.name);

    if (qty > product.stock) {
      this.showConfirm('Error', `âŒ Insufficient stock!\n\nRequested: ${ qty } \nAvailable: ${ product.stock } `);
      return;
    }

    // Initialize currentSaleItems if undefined
    if (!this.currentSaleItems) {
      console.warn('âš ï¸ currentSaleItems was undefined, initializing...');
      this.currentSaleItems = [];
    }

    // Create item object
    const item = {
      product_id: productId,
      product_name: product.name,
      product_description: product.description || '', // â† ADD THIS LINE
      qty: qty,
      unit_price: unitPrice || product.unit_price,
      selling_price: sellPrice,
      total: qty * sellPrice
    };

    console.log('ðŸ“¦ Item to add:', item);

    // Add to array
    this.currentSaleItems.push(item);
    console.log('âœ… Item added to array! Total items:', this.currentSaleItems.length);

    // â­â­â­ UPDATE UI â­â­â­
    console.log('ðŸŽ¨ Calling renderSaleItems()...');
