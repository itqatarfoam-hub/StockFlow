  async handleLogin(e) {
    if (e) {
      e.preventDefault();
      e.stopPropagation();
    }

    console.log('ðŸ” ========== LOGIN START ==========');

    const username = document.getElementById('loginUsername')?.value.trim();
    const password = document.getElementById('loginPassword')?.value.trim();

    ui.hideError('loginErrorMsg');

    if (!username || !password) {
      console.error('âŒ Missing credentials');
      ui.showError('loginErrorMsg', 'Please enter username and password');
      return;
    }

    try {
      const result = await authModule.login(username, password);

      if (!result.success) {
        console.error('âŒ Login failed:', result.error);
        ui.showError('loginErrorMsg', result.error);
        return;
      }

      console.log('âœ… Login successful for:', username);
      this.currentUser = result.user;
      this.currentPage = 'dashboard';

      // Clear old data
      this.products = [];
      this.categories = [];
      this.customers = [];
      this.sales = [];
      this.users = [];

      console.log('ðŸ“¦ Loading initial data...');
      await this.loadInitialData();

      // â­ CRITICAL: Load role configuration BEFORE rendering
      console.log('ðŸ” Loading role configuration...');
      await this.loadRoleConfig();
      console.log('âœ… Role config loaded for role:', this.currentUser.role);
      console.log('ðŸ“‹ Allowed pages:', this.roleAccessConfig[this.currentUser.role]);

      console.log('ðŸŽ¨ Rendering dashboard...');
      await this.render();

      console.log('ðŸ”— Attaching listeners...');
      this.attachGlobalListeners();
      this.attachPageSpecificListeners();

      console.log('âœ… Login complete!');
      console.log('ðŸ” ========== LOGIN COMPLETE ==========\n');

    } catch (error) {
      console.error('âŒ Login error:', error);
      ui.showError('loginErrorMsg', 'An error occurred. Please try again.');
    }
  }

