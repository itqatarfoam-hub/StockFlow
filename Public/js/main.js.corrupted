  // ========== LOAD ROLE CONFIGURATION ==========
  async loadRoleConfig() {
    try {
      console.log('ðŸ“¡ Fetching role configurations from database...');

      const response = await fetch('/api/roles', {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json'
        },
        credentials: 'include'
      });

      if (!response.ok) {
        console.error('âŒ Failed to load role config:', response.status);
        // Keep the default configuration if API fails
        return;
      }

      const data = await response.json();

      if (!data.roles || !Array.isArray(data.roles)) {
        console.error('âŒ Invalid role data received');
        return;
      }

      console.log('âœ… Received', data.roles.length, 'roles from database');
      this.roles = data.roles;

      // Build roleAccessConfig from database roles
      const newConfig = {};

      data.roles.forEach(role => {
        const permissions = Array.isArray(role.permissions)
          ? role.permissions
          : (typeof role.permissions === 'string' ? JSON.parse(role.permissions) : []);

        newConfig[role.name] = permissions;
        console.log(`  ðŸ“‹ ${role.name}:`, permissions);
      });

      // Update the role access configuration
      this.roleAccessConfig = newConfig;

      console.log('âœ… Role configuration updated successfully');

    } catch (error) {
      console.error('âŒ Error loading role config:', error);
      // Keep the default configuration if there's an error
    }
  }

