  async handleUserFormSubmit(e) {
    e.preventDefault();
    e.stopPropagation();
    console.log('ðŸ’¾ ========== SAVE USER START ==========');

    const username = document.getElementById('userName').value.trim();
    const fullName = document.getElementById('userFullName').value.trim();
    const salesCode = document.getElementById('userSalesCode')?.value.trim() || '';
    const email = document.getElementById('userEmail').value.trim();
    const role = document.getElementById('userRole').value;
    const canBroadcast = document.getElementById('userCanBroadcast').checked ? 1 : 0;
    const password = document.getElementById('userPassword').value.trim();

    const errorMsg = document.getElementById('userErrorMsg');
    errorMsg.textContent = '';

    console.log('ðŸ“ Form data:', { username, fullName, salesCode, email, role, passwordLength: password.length, editing: !!this.editingUserId });

    // Validation
    if (!username || !fullName || !role) {
      errorMsg.textContent = 'âŒ Username, full name, and role are required';
      return;
    }

    if (username.length < 3) {
      errorMsg.textContent = 'âŒ Username must be at least 3 characters';
      return;
    }

    if (!/^[a-zA-Z0-9_-]+$/.test(username)) {
      errorMsg.textContent = 'âŒ Username can only contain letters, numbers, underscores and hyphens';
      return;
    }

    // Check username uniqueness for NEW users
    if (!this.editingUserId) {
      const existingUser = this.users.find(u => u.username.toLowerCase() === username.toLowerCase());
      if (existingUser) {
        console.error('âŒ Username already exists:', username);
        errorMsg.textContent = `âŒ Username "${username}" is already taken.Please choose a different username.`;
        return;
      }
    }

    // Only require password for new users
    if (!this.editingUserId && !password) {
      errorMsg.textContent = 'âŒ Password is required for new users';
      return;
    }

    if (password && password.length < 6) {
      errorMsg.textContent = 'âŒ Password must be at least 6 characters';
      return;
    }

    if (email && !this.isValidEmail(email)) {
      errorMsg.textContent = 'âŒ Invalid email address';
      return;
    }

    const userData = {
      username,
      full_name: fullName,
      sales_code: salesCode || null,
      email: email || null,
      role,
      can_broadcast: canBroadcast
    };

    // Only include password if provided
    if (password) {
      userData.password = password;
    }

    console.log('ðŸ“¤ Sending user data:', { ...userData, password: password ? '***' : 'not provided' });

    try {
      let result;

      if (this.editingUserId) {
        console.log('âœï¸ Updating user:', this.editingUserId);
        result = await usersModule.updateUser(this.editingUserId, userData);
      } else {
        console.log('âž• Creating new user');
        result = await usersModule.createUser(userData);
      }

      if (!result.success) {
        console.error('âŒ Save failed:', result.error);

        if (result.error.includes('UNIQUE constraint') || result.error.includes('already exists')) {
          errorMsg.textContent = `âŒ Username "${username}" is already taken.Please choose a different username.`;
        } else {
          errorMsg.textContent = `âŒ ${ result.error || 'Failed to save user' } `;
        }
        return;
      }

      console.log('âœ… User saved successfully');
      console.log('ðŸ’¾ ========== SAVE USER COMPLETE ==========\n');

      this.showConfirm(
        'Success',
        `âœ“ User "${username}" ${ this.editingUserId ? 'updated' : 'created' } successfully!`,
        async () => {
          this.closeUserModal();
          this.editingUserId = null;

          // Reload users list (on Settings page)
          if ((this.currentPage === 'settings' || this.currentPage === 'users') && window.usersPageModule) {
            await usersPageModule.loadUsers(this);
          }
        }
      );
    } catch (error) {
      console.error('âŒ Error saving user:', error);
      errorMsg.textContent = `âŒ ${ error.message || 'An error occurred. Please try again.' } `;
    }
  }

