  async handleSalesFormSubmit(e) {
    e.preventDefault();
    console.log('ðŸ’¾ Submitting sale...');

    const saleDate = document.getElementById('saleDate').value;
    const customerId = document.getElementById('saleCustomer').value;
    const errorMsg = document.getElementById('saleErrorMsg');

    errorMsg.innerHTML = '';

    if (!saleDate || !customerId) {
      errorMsg.innerHTML = 'âŒ Please select date and customer';
      return;
    }

    if (this.currentSaleItems.length === 0) {
      errorMsg.innerHTML = 'âŒ Please add at least one item to the sale';
      return;
    }

    for (let item of this.currentSaleItems) {
      if (!item.product_id) {
        errorMsg.innerHTML = 'âŒ All items must have a product selected';
        return;
      }
      if (item.qty <= 0) {
        errorMsg.innerHTML = 'âŒ All items must have quantity greater than 0';
        return;
      }
      const product = this.products.find(p => p.id === item.product_id);
      if (product && item.qty > product.stock) {
        errorMsg.innerHTML = `âŒ Not enough stock for ${ product.name }(Available: ${ product.stock })`;
        return;
      }
    }

    const totalAmount = this.currentSaleItems.reduce((sum, item) => sum + item.total, 0);

    this.showConfirm(
      'Confirm Sale',
      `Complete this sale ?\n\nTotal Amount: $${ totalAmount.toFixed(2) } \nItems: ${ this.currentSaleItems.length } \nCustomer: ${ this.customers.find(c => c.id === customerId)?.company_name } `,
      () => this.completeSale(saleDate, customerId)
